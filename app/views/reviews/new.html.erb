<h1>New Review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit class:"btn btn-primary"%>
<% end %>

<%= link_to restaurant_path(@restaurant), class: "btn btn-success" do %>
  <i class="fas fa-history"></i> Back to <%= @restaurant.name %>
<% end %>
