<h1><%= @restaurant.name %></h1>
<p><i class="fas fa-map-marked-alt"></i> <%= @restaurant.address %></p>
<p><i class="fas fa-phone"></i> <%= @restaurant.phone_number %></p>
<p><i class="fas fa-utensils"></i> <%= @restaurant.category %></p>

<hr>
<h4>Reviews</h4>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %>, <%= review.rating %> / 5</li>
  <% end %>
</ul>
<hr>
<h4>Add a new rating</h4>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit class:"btn btn-primary"%>
<% end %>

<%= link_to restaurants_path, class: "btn btn-success" do %>
  <i class="fas fa-history"></i> Back
<% end %>
